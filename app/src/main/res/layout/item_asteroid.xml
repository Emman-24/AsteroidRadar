<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="asteroid"
            type="com.emman.android.asteroidradar.domain.models.Asteroid" />

        <variable
            name="clickListener"
            type="com.emman.android.asteroidradar.presentation.adapter.AsteroidListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:onClick="@{()->clickListener.onClick(asteroid)}"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layoutDirection="locale">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCodeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{asteroid.codename}"
                android:textAppearance="@style/DetailValueTextAppearance"
                android:textDirection="locale"
                tools:text="68347 (2001 KB67)" />

            <TextView
                android:id="@+id/tvCloseApproachDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{asteroid.closeApproachDate}"
                android:textAppearance="@style/DetailSubtitleTextAppearance"
                android:textDirection="locale"
                tools:text="2020-02-08" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@{asteroid.descriptionImage}"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            app:iconStatus="@{asteroid.potentiallyHazardous}"
            app:srcCompat="@drawable/ic_status_potentially_hazardous" />

    </LinearLayout>
</layout>